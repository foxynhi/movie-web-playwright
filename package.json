{
  "name": "clone-mcp-playwright",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=*-chromium",
    "test:firefox": "playwright test --project=-*firefox",
    "test:webkit": "playwright test --project=*-webkit",
    "test:mobile-chromium": "playwright test --project=*-mobile-chromium",
    "test:mobile-safari": "playwright test --project=*-mobile-safari",
    "test:google-chrome": "playwright test --project=*-google-chrome",
    "test:microsoft-edge": "playwright test --project=*-microsoft-edge",
    "test:smoke": "npx playwright test --grep @smoke",
    "report": "playwright show-report TestResults/playwright-report",
    "clean": "del-cli \"TestResults/*.html\" \"TestResults/playwright-report\" \"TestResults/screenshots\" \"test-results\"",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "lint-check": "eslint .",
    "format-check": "prettier --check .",
    "validate": "npm run format && npm run lint",
    "inspect": "npx playwright codegen https://debs-obrien.github.io/playwright-movies-app/"
  },
  "keywords": [
    "playwright",
    "testing",
    "pom",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "del-cli": "^7.0.0",
    "eslint": "^9.37.0",
    "eslint-config-eslint": "^13.0.0",
    "eslint-plugin-playwright": "^2.2.2",
    "globals": "^16.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.2",
    "dotenv": "^16.3.1"
  }
}
